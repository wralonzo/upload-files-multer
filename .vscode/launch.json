{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: dev full stack",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run start:dev",
        "console": "integratedTerminal",
        "serverReadyAction": {
          "pattern": "started server on .+, url: (https?://.+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        }
      },
      {
        "name": "Next.js: local full stack",
